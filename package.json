{
  "name": "wearable-vscode-extension",
  "displayName": "Wearable Robot Evaluation",
  "description": "VSCode extension for Wearable Robot Evaluation",
  "version": "0.0.1",
  "publisher": "donghee",
  "engines": {
    "vscode": "^1.99.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/donghee/wearable_vscode_extension.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
			"file/newFile": [
				{
					"command": "wearable-vscode-extension.helloWorld"
				}
			]
		},
    "commands": [
      {
        "command": "wearable-vscode-extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "wearable-vscode-extension.createNewProject",
        "title": "Create New Project"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "wearable-explorer",
          "title": "Wearable Robot Evaluation",
          "icon": "media/wearable-icon.svg"
        }
      ]
    },
    "views": {
      "wearable-explorer": [
        {
          "id": "wearable-explorer-tutorials",
          "name": "Wearable Robot Tutorials"
        },
        {
          "id": "wearable-explorer-projects",
          "name": "Wearable Robot Projects"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
